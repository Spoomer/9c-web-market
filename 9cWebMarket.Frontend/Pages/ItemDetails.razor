@inject IItemNameService ItemNameService
@using Nekoyume.Model.Elemental
@using Nekoyume.Model.Item
@using NineCWebMarket.Frontend.Models.Extensions
@using NineCWebMarket.Frontend.Models.Mimir
@using NineCWebMarket.Frontend.Services.Interfaces
@using Equipment = NineCWebMarket.Frontend.Models.Equipment

<div class="d-flex">
    <div class="flex-fill">
        @if (Equipment is not null)
        {
            <table class="table table-responsive" id="equipment-info-table">
                <tbody>
                <tr>
                    <td>@nameof(ItemSubType)</td>
                    <td>@Equipment.ItemSubType</td>
                </tr>
                <tr>
                    <td>@nameof(ElementalType)</td>
                    <td>@Equipment.ElementalType</td>
                </tr>
                <tr>
                    <td>@nameof(Equipment.Grade)</td>
                    <td>@Equipment.Grade</td>
                </tr>
            <tr>
                <td>@nameof(Equipment.Level)</td>
                <td>@Equipment.Level</td>
            </tr>
                @foreach (var stat in Equipment.StatsMap.Value)
                {
                    <tr>
                        <td>@stat.Key</td>
                        <td>@(Math.Round(stat.Value.BaseValue + stat.Value.AdditionalValue))</td>
                    </tr>
                }
                @foreach (var skill in Equipment.Skills)
                {
                    <tr>
                        <td>@nameof(skill.SkillRow.SkillCategory)</td>
                        <td>@skill.SkillRow.SkillCategory</td>
                    </tr>
                    <tr>
                        <td>@nameof(skill.SkillRow.SkillType)</td>
                        <td>@skill.SkillRow.SkillType</td>
                    </tr>
                    <tr>
                        <td>@nameof(skill.Chance)</td>
                        <td>@skill.Chance %</td>
                    </tr>
                }
                </tbody>
            </table>
        }
    </div>
</div>


@code {
    [Parameter] public ProductItem? Item { get; set; }

    private ProductItem? _itemProduct;

    private Equipment? Equipment => Item?.Object.Equipment;


    private string? GetItemName()
    {
        if (Equipment is not null)
        {
            return ItemNameService[Equipment.Id];
        }

        return null;
    }

}